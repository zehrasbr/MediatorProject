@model MediatorProject.MediatorPattern.Results.GetProductUpdateByIdQueryResult
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
<form method="post">
    <label>Ürün Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Ürün Marka</label>
    <input type="text" class="form-control" asp-for="Brand" />
    <br />
    <label>Ürün Stok</label>
    <input type="text" class="form-control" asp-for="Stock" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <label>Ürün Kategori</label>
    <input type="text" class="form-control" asp-for="Category" />
    <br />
    <input type="hidden"  asp-for="ProductID" />
    <button class="btn btn-primary">Ürünü Güncelle</button>
</form>
</div>